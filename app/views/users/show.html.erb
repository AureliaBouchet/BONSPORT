<div class="container dashboard">
  <div class="profile">
    <h1>My profile</h1>
    <h2>My informations</h2>
      <div class="info">
        <span> <%= cl_image_tag current_user.photo, class: "avatar-large" %></span>
        <span><%= current_user.first_name.capitalize %></span>
        <span><%= current_user.last_name.capitalize %></span>
        <span> <%= link_to "edit", edit_user_path(current_user) %> </span>
      </div>

      <h2>My account</h2>
      <div class="info">
        <span><%= current_user.email %></span>
        <span> <%= link_to "edit password", edit_user_password_path %> </span>
      </div>
  </div>


  <h2>My reservations</h2>
  <div class="row">
      <% Reservation.where(user: current_user).each do |reservation| %>
      <div class="reservation-dash">
        <div class="reservation-user"
           <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
          <span><%= reservation.user.first_name.capitalize %></span>
          <span><%= reservation.user.last_name.capitalize %></span>
        </div>
        <div class="reservation-date text-center">
          <span> Reservation from : <%= reservation.date_begin %> to : <%= reservation.date_end %></span>
        </div>
        <div class="reservation-status">
          <p class="status pending"><%= reservation.status %></p>
        </div>
      </div>
      <% end %>

    </div>

  <h2>My playgrounds</h2>
    <div class="row">
      <% Playground.where(user:@user).each do |playground| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path playground.photo, height: 300, width: 400, crop: :fill %>);">
            <div class="card-category"><%=playground.category%> <%="-"%> <%=playground.price%> <%="â‚¬/h"%></div>
            <div class="card-description">
              <h2><%=playground.title%></h2>
              <p><%=playground.address%></p>
            </div>
            <a class="card-link" href="#" ><%= link_to "", playground_path(playground.id) %></a>
          </div>
        </div>
      <% end %>
    </div>
</div>
