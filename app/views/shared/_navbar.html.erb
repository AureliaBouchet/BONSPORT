<div class="navbar-wagon">
  <!-- Logo -->
   <%= link_to root_path, class: "navbar-wagon-brand" do %>
    LOGO
    <%#= image_tag "logo.png", height: 50 %>
  <% end %>


  <!-- Right Navigation -->

    <% if user_signed_in? %>

<!-- LARGE DEVICE -->

  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "See all playgrounds", playgrounds_path, class: "navbar-wagon-item navbar-wagon-link"  %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% user_avatar = current_user.photo.file || 'user.jpg' %>
          <%= cl_image_tag user_avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>



          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "My profile", "" %></li>
            <li><%= link_to "My reservations", "" %></li>
            <li><%= link_to "My playgrounds", "" %></li>
            <li> <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
            </li>
          </ul>

        </div>
      </div>
  </div>


  <!-- SMALL DEVICE -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <% user_avatar = current_user.photo.file || 'user.jpg' %>
      <%= cl_image_tag user_avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li> <%= link_to "See all playgrounds", playgrounds_path, class: "border-bottom" %></li>
        <li><%= link_to "My profile", "" %></li>
        <li><%= link_to "My reservations", "" %></li>
        <li><%= link_to "My playgrounds", "" %></li>
         <li> <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
          </li>
      </ul>
    </div>
  </div>

    <%else %>
        <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>


    <% end %>

</div>
