<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <%= simple_form_for [@playground, @reservation] do |r| %>
      <%= r.input :date_begin, order: [:day, :month, :year] %>
      <%= r.input :date_end, order: [:day, :month, :year] %>
      <%= r.submit "ask for reservation", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
